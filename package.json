{
  "name": "family-task-manager",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"bun run dev:client\" \"bun run dev:server\"",
    "dev:client": "vite --host 0.0.0.0",
    "dev:server": "bun run --watch server/index.ts",
    "build": "tsc -b && vite build --outDir dist/client",
    "build:server": "tsc -p tsconfig.server.json",
    "lint": "biome lint ./src ./server",
    "format": "biome format --write ./src ./server",
    "check": "biome check --apply ./src ./server",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "bun run server/db/migrate.ts",
    "db:seed": "bun run server/db/seed.ts",
    "db:studio": "drizzle-kit studio",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "start": "bun run dist/server/index.js",
    "typecheck": "tsc -b",
    "preview": "vite preview"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@hono/zod-validator": "^0.4.3",
    "@hookform/resolvers": "^4.1.3",
    "@node-rs/bcrypt": "^1.10.7",
    "@tanstack/react-query": "^5.69.0",
    "@tanstack/react-table": "^8.21.2",
    "axios": "^1.8.4",
    "clsx": "^2.1.1",
    "concurrently": "^9.1.2",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.41.0",
    "hono": "^4.7.5",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.483.0",
    "msw": "^2.7.3",
    "neverthrow": "^8.2.0",
    "pg": "^8.14.1",
    "playwright": "^1.51.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.54.2",
    "react-hot-toast": "^2.5.2",
    "react-router-dom": "^7.4.0",
    "tailwind-merge": "^3.0.2",
    "tailwindcss-animate": "^1.0.7",
    "vitest": "^3.0.9",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@eslint/js": "^9.18.0",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/pg": "^8.11.11",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "drizzle-kit": "^0.30.5",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "postcss": "^8.5.1",
    "postgresql": "^0.0.1",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.10",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.20.0",
    "vite": "^6.0.5"
  }
}
