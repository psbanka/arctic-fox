{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": false,
    "jsx": "react-jsx",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "declaration": false,
    "outDir": "./dist/client",
    "rootDir": "."
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "shared/**/*.ts"],
  "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts"]
}
